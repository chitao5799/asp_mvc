<!DOCTYPE HTML>
<html>
<head>
    <title>Free Home Shoppe Website Template | Home :: w3layouts</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link href="~/Assets/Client/css/bootstrap3.3.7.min.css" rel="stylesheet" />
    <link href="~/Assets/Client/css/style.css" rel="stylesheet" type="text/css" media="all" />
    <link href="~/Assets/Client/css/slider.css" rel="stylesheet" type="text/css" media="all" />
    <link href="~/Assets/Client/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Assets/Client/css/jquery-ui.css" rel="stylesheet" />
    @*icon đăng nhập bằng facebook,...... *@
    <link href="~/Assets/Client/css/BootstrapScocial.css" rel="stylesheet" />
    @*<script type="text/javascript" src="~/Assets/Client/js/jquery-1.7.2.min.js"></script>*@
    <script src="~/Assets/Client/js/jquery-3.3.1.js"></script>
    
    <script src="~/Assets/Client/js/bootstrap3.min.js"></script>
    <script type="text/javascript" src="~/Assets/Client/js/move-top.js"></script>
    <script type="text/javascript" src="~/Assets/Client/js/easing.js"></script>
    <script type="text/javascript" src="~/Assets/Client/js/startstop-slider.js"></script>
    <script src="~/Assets/Client/js/jquery-ui.js"></script>
</head>
<body>
    <div class="wrap">
        <div class="header">
            <div class="headertop_desc">
                <div class="call">
                    <p><span>Need help?</span> call us <span class="number">1-22-3456789</span></span></p>
                </div>
                <div class="account_desc">
                    @{Html.RenderAction("TopMenuRight", "Home");} <!-- dấu ; là bắt buộc-->
                </div>
                <div class="clear"></div>
            </div>
            <div class="header_top">
                <div class="logo">
                    <a href="index.html"><img src="~/Assets/Client/images/logo.png" alt="" /></a>
                </div>
                @{ Html.RenderAction("CartHeader", "Home");}
                <script type="text/javascript">
                    function DropDown(el) {
                        this.dd = el;
                        this.initEvents();
                    }
                    DropDown.prototype = {
                        initEvents: function () {
                            var obj = this;

                            obj.dd.on('click', function (event) {
                                $(this).toggleClass('active');
                                event.stopPropagation();
                            });
                        }
                    }

                    $(function () {

                        var dd = new DropDown($('#dd'));

                        $(document).click(function () {
                            // all dropdowns
                            $('.wrapper-dropdown-2').removeClass('active');
                        });

                    });

                </script>
                <div class="clear"></div>
            </div>
            <div class="header_bottom">
                <div class="menu">
                    @{Html.RenderAction("MainMenu", "Home");}
                </div>
                <div class="search_box">
                    <form action="~/Product/Search" method="get">
                        <input type="text" name="keywords" id="txtSearch" placeholder="search"><input type="submit" value="">
                    </form>
                </div>
                <div class="clear"></div>
            </div>
            @RenderSection("submenu_slide", false)
        </div>
        <div class="main">
            @RenderBody()
        </div>
    </div>
    <div class="footer">
        <div class="wrap">
            @{ Html.RenderAction("Footer", "Home");}
        </div>
        <div class="copy_right">
            <p>&copy; 2013 home_shoppe. All rights reserved | Design by <a href="http://w3layouts.com/">W3layouts</a></p>
        </div>
    </div>
    <script type="text/javascript">
        $(document).ready(function () {
            $().UItoTop({ easingType: 'easeOutQuart' });

        });
    </script>
    <a href="#" id="toTop"><span id="toTopHover"> </span></a>
    <script src="~/Assets/Client/js/Controller/BaseController.js"></script>
    @RenderSection("jsFooter", required: false)
</body>
</html>

